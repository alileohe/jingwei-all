<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1">
    <baseDirectory></baseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>jingwei-server-${jingwei.all.version}/bin
            </outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/conf</directory>
            <outputDirectory>jingwei-server-${jingwei.all.version}/conf
            </outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/logs</directory>
            <outputDirectory>jingwei-server-${jingwei.all.version}/logs
            </outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/plugin</directory>
            <outputDirectory>jingwei-server-${jingwei.all.version}/plugin
            </outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>compile</scope>
            <outputDirectory>jingwei-server-${jingwei.all.version}/lib
            </outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>